@model IEnumerable<TuTiendaSDE.Models.TiendaProducto>

@{
    ViewBag.Title = "TiendaProducto";
}

<h2>Productos en tienda</h2>

<p>
    @Html.ActionLink("Crear", "Create")
</p>
<table class="table table-bordered">
    <tr style="background-color:aqua;">
        <th>
            @Html.DisplayNameFor(model => model.Producto.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tienda.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Disponibilidad)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Producto.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tienda.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Disponibilidad)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.ProTiendaID }, new { @class = "btn btn-info" })
            @Html.ActionLink("Detalles", "Details", new { id = item.ProTiendaID }, new { @class = "btn btn-info" })
            @Html.ActionLink("Eliminar", "Delete", new { id = item.ProTiendaID }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
